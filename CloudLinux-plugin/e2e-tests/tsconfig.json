{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noEmitHelpers": false,
    "strictNullChecks": false,
    "outDir": "compiled",
    "baseUrl": ".",
    "types": [
      "jasmine",
      "node",
      "selenium-webdriver"
    ],
    "lib": [
      "es2017"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
